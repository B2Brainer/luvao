generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  nombre          String
  email           String   @unique
  password_hash   String
  rol             String   @default("user")
  fecha_registro  DateTime @default(now())
  
  @@map("usuarios")
}