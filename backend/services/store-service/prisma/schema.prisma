datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Store {
  id         Int      @id @default(autoincrement())
  name       String
  baseUrl    String
  country    String?
  isActive   Boolean  @default(true)
  categories String[]
  createdAt  DateTime @default(now())
}
