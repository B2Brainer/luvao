generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        String   @id @default(uuid())
  name      String
  url       String
  products  Product[]
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  lastSeen  DateTime @default(now())
  storeId   String
  store     Store @relation(fields: [storeId], references: [id])
}
